<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class='login-header is-flex is-justify-content-space-between is-align-items-center p-2 mb-2'>
    <%= link_to 'Back', root_path, class: "has-text-white"  %>
    <div>
      <h2 class="has-text-white is-size-4">REGISTER</h2>
    </div>
    <div>
      <%= f.submit "Next", class:'form-submit has-text-white is-size-6' %>
    </div>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, placeholder: "Full Name", class: "input", required: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "input", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "input", required: true %>
  </div>

<% end %>
